    private void boton2ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        if (etiquetatexto.getText() != "0") {
            contador += "0";
            etiquetatexto.setText(contador);
            activado = true;
        }
    }                                      

    private void boton8ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        if (activado) {
            numero = Double.parseDouble(etiquetatexto.getText());
            etiquetamuestra.setText(numero + "+");
            contador = "";
            etiquetatexto.setText("");
            operacion = "sumar";
            activado = false;
            punto = true;
        }
    }                                      

    private void boton4ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        double numero2;
        String dato;
        if (contador == "") {
            contador = "0";
            if (operacion == "") {

            } else if (operacion == "sumar") {
                numero2 = Double.parseDouble(contador);
                resultado = numero + numero2;
                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            } else if (operacion == "restar") {
                numero2 = Double.parseDouble(contador);
                resultado = numero - numero2;
                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            } else if (operacion == "multiplicar") {
                numero2 = Double.parseDouble(contador);
                resultado = numero * numero2;
                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            } else if (operacion == "dividir") {
                if (contador != "" || contador == "0") {
                    numero2 = Double.parseDouble(contador);
                    resultado = numero / numero2;
                    dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                    etiquetatexto.setText(dato);
                    etiquetamuestra.setText("");
                    contador = dato;
                    operacion = "";
                } else {
                    etiquetatexto.setText("ERROR");
                    operacion = "";
                }
            } else if (operacion == "raiz") {
                resultado = Math.sqrt(numero);

                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            }
        } else {
            if (operacion == "") {

            } else if (operacion == "sumar") {
                numero2 = Double.parseDouble(contador);
                resultado = numero + numero2;
                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            } else if (operacion == "restar") {
                numero2 = Double.parseDouble(contador);
                resultado = numero - numero2;
                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            } else if (operacion == "multiplicar") {
                numero2 = Double.parseDouble(contador);
                resultado = numero * numero2;
                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            } else if (operacion == "dividir") {
                if (contador != "" ||contador == "0") {
                    numero2 = Double.parseDouble(contador);
                    resultado = numero / numero2;
                    dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                    etiquetatexto.setText(dato);
                    etiquetamuestra.setText("");
                    contador = dato;
                    operacion = "";
                } else {
                    etiquetatexto.setText("ERROR");
                    operacion = "";
                }
            } else if (operacion == "raiz") {
                resultado = Math.sqrt(numero);

                dato = (resultado - (int) resultado == 0) ? String.format("%.0f", resultado) : String.format("%.10f", resultado);
                etiquetatexto.setText(dato);
                etiquetamuestra.setText("");
                contador = dato;
                operacion = "";
            }
        }
         activado=true;
         contador="";
    }                                      

    private void boton12ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (activado) {
            numero = Double.parseDouble(etiquetatexto.getText());
            etiquetamuestra.setText(numero + "-");
            contador = "";
            etiquetatexto.setText("");
            operacion = "restar";
            activado = false;
            punto = true;
        }
    }                                       

    private void boton16ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (activado) {
            numero = Double.parseDouble(etiquetatexto.getText());
            etiquetamuestra.setText(numero + "x");
            contador = "";
            etiquetatexto.setText("");
            operacion = "multiplicar";
            activado = false;
            punto = true;
        }
    }                                       

    private void boton19ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (activado) {
            numero = Double.parseDouble(etiquetatexto.getText());
            etiquetamuestra.setText(numero + "/");
            contador = "";
            etiquetatexto.setText("");
            operacion = "dividir";
            activado = false;
            punto = true;
        }
    }                                       

    private void boton18ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (activado) {
            numero = Double.parseDouble(etiquetatexto.getText());
            etiquetamuestra.setText("√" + numero);
            contador = "";
            etiquetatexto.setText("");
            operacion = "raiz";
            punto = true;
            activado = false;
        }
    }                                       

    private void boton3ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        if (punto) {
            if (contador == "") {
                contador = contador + "0.";
                etiquetatexto.setText(contador);
                punto = false;
            } else {
                contador = contador + ".";
                etiquetatexto.setText(contador);
                punto = false;
            }
        }
    }                                      

    private void boton17ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        contador = "";
        etiquetatexto.setText(contador + "0");

    }                                       

    private void jMenuItem3ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        divisas di = new divisas();
        dispose();
        di.setVisible(true);
    }                                          

    private void boton1ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        if(contador!=""){
        if (contador.charAt(0) != '-') {
            contador = "-" + contador;
        } else {
            contador = contador.substring(1, contador.length());
        }
        etiquetatexto.setText(contador);
    }                                      
    }
