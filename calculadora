    private void boton20ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        int tamaño = contador.length();
        if (tamaño > 0) {
            if (tamaño == 1) {
                contador = "0";
            }
            contador = contador.substring(0, contador.length() - 1);
            etiquetatexto.setText(contador);
            if (contador == "") {
                etiquetatexto.setText("0");
                punto=true;
            }
        }
    }                                       

    private void boton13ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        contador += "7";
        etiquetatexto.setText(contador);
        activado = true;
    }                                       

